<Window x:Class="WpfApp4Login1P2C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4Login1P2C"
        mc:Ignorable="d"
        Title="LOG IN" Icon="/img/icoVapor.jpg" Height="550" Width="800">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/img/bgVapor.jpg" Opacity="0.40"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblTitulo"
               Grid.ColumnSpan="2"
               Content="L O G I N"
               FontSize="50"/>

        <Label x:Name="lblNombre"
               Grid.Row="1"
               Content="Nombre: "
               FontSize="20"
               HorizontalAlignment="Right"/>

        <TextBox x:Name="txtNombre"
                 Grid.Row="1"
                 Grid.Column="1"
                 Height="50px"
                 Margin="10,0"/>

        <Label x:Name="lblEmail"
               Grid.Row="2"
               Content="e-mail: "
               FontSize="20"
               HorizontalAlignment="Right"/>

        <TextBox x:Name="txtEmail"
                 Grid.Row="2"
                 Grid.Column="1"
                 Height="50px"
                 Margin="10,0"/>

        <Label x:Name="lblPassword"
               Grid.Row="3"
               Content="Contraseña: "
               FontSize="20"
               HorizontalAlignment="Right"/>

        <PasswordBox x:Name="pwdBContra"
                 Grid.Row="3"
                 Grid.Column="1"
                 Height="50px"
                 Margin="10,0"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 Opacity="0.7"
                 Background="AliceBlue"/>

        <Button x:Name="btnLimpiar"
                Grid.Row="4"
                Content="Limpiar" Click="btnLimpiar_Click"/>

        <Button x:Name="btnAceptar"
                Grid.Row="4"
                Grid.Column="1"
                Content="Aceptar" Click="btnAceptar_Click"/>

        <TextBlock x:Name="txtBResultado"
                   Grid.Row="5"
                   Grid.ColumnSpan="2"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="10"
                   Opacity="0.7"
                   Background="AliceBlue"/>

    </Grid>
</Window>
